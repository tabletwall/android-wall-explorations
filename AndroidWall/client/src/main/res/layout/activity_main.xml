<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/relativeLayout"
    tools:context="com.pervasive.androidwall.client.controller.MainActivity">
    
    <com.pervasive.androidwall.client.view.TabletView
        android:id="@+id/tabletview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </com.pervasive.androidwall.client.view.TabletView>
    
    <ImageView
    android:id="@+id/iv_logo"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_launcher"
    android:contentDescription="@string/drag_drop"  />
    
    <Button
    android:id="@+id/connect_btn"
    android:layout_width="96dp"
    android:layout_height="64dp"
    android:onClick="clickConnect"
    android:text="connect"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/iv_logo"
    android:layout_alignEnd="@+id/iv_logo" />
</RelativeLayout>